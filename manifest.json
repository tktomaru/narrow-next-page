{
  "manifest_version": 3,
  "name": "ハーメルン Click the next(or prev) button on PageDown(or PageUp)",
  "version": "1.0",
  "description": "Automatically click the next page button when pressing the Down key at the bottom of the page.",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://syosetu.org/novel/*",
        "https://ncode.syosetu.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}